		(#{id,jdbcType=NUMERIC}, #{nickName,jdbcType=VARCHAR}, #{openId,jdbcType=VARCHAR}, #{province,jdbcType=VARCHAR}, #{city,jdbcType=VARCHAR}, #{createTime,jdbcType=DATE}, #{userImg,jdbcType=VARCHAR})
